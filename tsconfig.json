{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "forceConsistentCasingInFileNames": true,
    "plugins": [{ "name": "next" }],
    "baseUrl": ".",
    "paths": {
      "@/*": ["app/*"],
      "@lib/*": ["lib/*"],
      "@components/*": ["components/*"],

      // Builder aliases
      "@builder/*": ["builder/*"],
      "@builderComponents/*": ["builder/components/*"],
      "@canvas/*": ["builder/canvas/*"],
      "@state/*": ["builder/store/*"],
      "@properties/*": ["builder/properties/*"],

      // AI & export
      "@ai/*": ["ai/*"],
      "@export/*": ["export/*"],

      // Server
      "@server/*": ["server/*"],

      // Plugins
      "@plugins/*": ["plugins/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts",
    "**/*.mts",
    "**/*.cts"
  ],
  "exclude": ["node_modules"]
}
