// prisma/schema.prisma


generator client {
provider = "prisma-client-js"
}


datasource db {
provider = "postgresql"
url = env("DATABASE_URL")
}


model User {
id String @id @default(cuid())
email String @unique
name String?
image String?
teams TeamMember[]
projects Project[]
createdAt DateTime @default(now())
}


model Team {
id String @id @default(cuid())
name String
members TeamMember[]
projects Project[]
}


model TeamMember {
id String @id @default(cuid())
role Role
user User @relation(fields: [userId], references: [id])
userId String
team Team @relation(fields: [teamId], references: [id])
teamId String
}


enum Role {
ADMIN
EDITOR
VIEWER
}


model Project {
id String @id @default(cuid())
name String
}
